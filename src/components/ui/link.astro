---
type Props = {
  variant?: "link" | "icon";
  href: string;
  target?: string;
};

const { href, target = "_self", variant = "link" } = Astro.props;
---

<a
  href={href}
  target={target}
  class:list={[
    {
      "inline-flex items-center justify-center rounded-md text-sm font-medium focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50": true,
      "text-primary underline-offset-4 hover:underline": variant === "link",
      "h-9 w-9 hover:bg-accent hover:text-accent-foreground": variant === "icon",
    },
  ]}
>
  <slot />
</a>
